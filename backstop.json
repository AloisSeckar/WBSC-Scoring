    },
    {
      "label": "generate-ok",
      "url": "http://localhost:3000",
      "onReadyScript": "puppet/scenarios/generate-ok.js"
    },
    {
      "label": "inputs-none",
      "url": "http://localhost:3000",
      "onReadyScript": "puppet/scenarios/inputs-none.js"
    },
    {
      "label": "inputs-all",
      "url": "http://localhost:3000",
      "onReadyScript": "puppet/scenarios/inputs-all.js"
    },
    {
      "label": "show-import",
      "url": "http://localhost:3000",
