    },
    {
      "label": "005-generate-ok",
      "url": "http://localhost:3000",
      "onReadyScript": "puppet/scenarios/005-generate-ok.js"
    },
    {
      "label": "006-no-inputs",
      "url": "http://localhost:3000",
      "onReadyScript": "puppet/scenarios/006-no-inputs.js"
    },
    {
      "label": "007-all-inputs",
      "url": "http://localhost:3000",
      "onReadyScript": "puppet/scenarios/007-all-inputs.js"
    },
    {
      "label": "008-show-import",
      "url": "http://localhost:3000",
      "onReadyScript": "puppet/scenarios/008-show-import.js"
    },
    {
      "label": "009-action-63",
      "url": "http://localhost:3000",
