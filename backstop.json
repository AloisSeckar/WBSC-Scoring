{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    },
    {
      "label": "screen",
      "width": 1920,
      "height": 1080
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "WBSC Scoring Homepage - visit",
      "url": "https://wbsc-scoring.netlify.app/"
    },
    {
      "label": "WBSC Scoring Homepage - click",
      "url": "https://wbsc-scoring.netlify.app/",
      "clickSelector": "#button-input-generate"
    },
    {
      "label": "WBSC Scoring Homepage - base action",
      "url": "https://wbsc-scoring.netlify.app/",
      "onReadyScript": "puppet/scenarios/baseActionSelect.js"
    },
    {
      "label": "WBSC Scoring Homepage - import from lib",
      "url": "https://wbsc-scoring.netlify.app/",
      "onReadyScript": "puppet/scenarios/importFromLib.js"
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
